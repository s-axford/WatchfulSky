<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mun.engi5895.stargazer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="ca.mun.engi5895.stargazer.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.mun.engi5895.stargazer.GeocentricActivity"
            android:parentActivityName="ca.mun.engi5895.stargazer.MainActivity" />
        <activity
            android:name="ca.mun.engi5895.stargazer.HeliocentricActivity"
            android:parentActivityName="ca.mun.engi5895.stargazer.MainActivity" />
        <activity
            android:name="ca.mun.engi5895.stargazer.SettingsActivity"
            android:parentActivityName="ca.mun.engi5895.stargazer.MainActivity" >
        </activity>

        <service android:name="ca.mun.engi5895.stargazer.saveFileIntent" >
        </service>

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>